{
	"name": "starter--eslint-jest-react-stylus-typescript-webpack",
	"version": "1.0.0",
	"description": "Starter project with the minimum configuration to begin development",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "npm run dev",
		"prebuild": "npm run clean:dist && npm run test:types && npm run test:unit",
		"build": "webpack --mode=production",
		"clean:dist": "rm -rf dist",
		"dev": "webpack --mode=development",
		"test": "npm run test:types && npm run test:lint && npm run test:unit && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"**/*.{js,ts,tsx}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,tsx,json,html}\"",
		"prettier": "prettier --write \"**/*.{js,ts,tsx,json,html}\"",
		"test:unit": "jest",
		"test:unit:watch": "jest --watch"
	},
	"dependencies": {
		"@babel/core": "^7.16.0",
		"@babel/plugin-transform-runtime": "^7.16.4",
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-react": "^7.16.0",
		"@babel/preset-typescript": "^7.16.0",
		"@babel/register": "^7.16.0",
		"@babel/runtime": "^7.16.3",
		"@testing-library/jest-dom": "^5.16.0",
		"@testing-library/react": "^12.1.2",
		"@types/jest": "^27.0.3",
		"@types/react": "^17.0.37",
		"@types/react-dom": "^17.0.11",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.5.1",
		"css-minimizer-webpack-plugin": "^3.2.0",
		"express": "^4.18.2",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.4.3",
		"mini-css-extract-plugin": "^2.4.5",
		"nib": "^1.1.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"stylus": "^0.55.0",
		"stylus-loader": "^6.2.0",
		"terser-webpack-plugin": "^5.2.5",
		"typescript": "^4.5.2",
		"webpack": "^5.64.4",
		"webpack-cli": "^4.9.1"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.5.0",
		"eslint": "^8.4.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.27.1",
		"prettier": "^2.5.0"
	}
}
